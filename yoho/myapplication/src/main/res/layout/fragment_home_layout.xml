<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:padding="4dp"
            android:id="@+id/home_sao"
            android:src="@mipmap/sao"
            android:layout_width="50dp"
            android:layout_height="match_parent">
        </ImageView>
        <TextView
            android:background="@drawable/buttonsearch"
            android:id="@+id/home_search"
            android:drawableLeft="@mipmap/sou"
            android:paddingLeft="10dp"
            android:textColor="#616161"
            android:layout_toRightOf="@+id/home_sao"
            android:layout_toLeftOf="@id/home_message"
            android:text="剁手星期一专享潮品已直降!"
            android:gravity="center"
            android:queryBackground="@drawable/buttonsearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
        <ImageView
            android:id="@+id/home_message"
            android:src="@mipmap/message"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">
        </ImageView>
    </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/home_tab"
                android:textColor="#B1B1B1"
                app:tabSelectedTextColor="#252525"
                android:layout_width="match_parent"
                android:layout_height="42dp">

            </com.google.android.material.tabs.TabLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/home_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.viewpager.widget.ViewPager>

        </LinearLayout>


</LinearLayout>
