<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/mine_scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@mipmap/person_center_bg"/>
            <TextView
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ser_of_whitebg"
                android:layout_width="340dp"
                android:layout_height="200dp"></TextView>
            <ImageView
                android:id="@+id/mine_default_header"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ser_of_header_bg"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/mine_name"
                android:layout_below="@id/mine_default_header"
                android:text="WYC"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#BDBDBD"
                android:id="@+id/mine_qianming"
                android:textSize="12dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mine_name"
                android:text="潮流就是我的态度"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mine_qianming"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:text="   成长值0"
                    android:drawableLeft="@drawable/putong_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/mine_rp"
                android:layout_marginTop="280dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="160dp"
                android:layout_height="30dp">
                <RadioButton
                    android:id="@+id/mine_sor"
                    android:textColor="@drawable/mine_rb_text_style"
                    android:background="@drawable/mine_leftrb_style"
                    android:text="社区"
                    android:button="@null"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </RadioButton>
                <RadioButton
                    android:id="@+id/mine_market"
                    android:textColor="@drawable/mine_rb_text_style"
                    android:background="@drawable/mine_rightrb_style"
                    android:text="商城"
                    android:button="@null"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </RadioButton>
            </RadioGroup>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mine_viewpager"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/mine_rp"
                android:layout_width="match_parent"
                android:layout_height="1800dp">

            </androidx.viewpager.widget.ViewPager>
        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:id="@+id/mine_title_bg"
        android:background="#802E2E2E"
        android:layout_width="match_parent"
        android:layout_height="42dp">

    </RelativeLayout>

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/mine_share"
        android:layout_alignParentRight="true"
        android:background="@drawable/share_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"/>
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/mine_mess"
        android:layout_toLeftOf="@id/mine_share"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/mess_icon"/>
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/mine_zxing"
        android:layout_toLeftOf="@id/mine_mess"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/twoweicode_icon"/>

    <ImageView
        android:id="@+id/mine_right_setting"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/mine_zxing"
        android:background="@drawable/setting_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"/>

    <ImageView
        android:id="@+id/mine_left_setting"
        android:layout_margin="5dp"
        android:background="@drawable/setting_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"/>
    <ImageView
        android:id="@+id/mine_title_head"
        android:layout_margin="5dp"
        android:layout_width="28dp"
        android:layout_height="28dp"/>
    <TextView
        android:id="@+id/mine_grow"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="成长值 0 >"
        android:layout_toRightOf="@id/mine_title_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
