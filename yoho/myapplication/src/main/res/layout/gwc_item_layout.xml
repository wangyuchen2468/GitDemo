<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <CheckBox
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_checkd"
            android:button="@null"
            android:drawableRight="@drawable/allselect"
            android:layout_height="match_parent">
        </CheckBox>

        <LinearLayout
            android:id="@+id/linears"
            android:layout_toLeftOf="@+id/reesf"
            android:layout_toRightOf="@id/item_checkd"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <ImageView
                     android:padding="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/item_pic"
                    android:layout_height="match_parent">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    android:id="@+id/item_title"
                    android:gravity="center"
                    android:layout_height="0dp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:id="@+id/item_money"
                    android:textColor="#DB2D2D"
                    android:layout_height="0dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reesf"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/item_reduce"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="－">

            </Button>

            <TextView
                android:id="@+id/item_num"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

            </TextView>

            <Button
                android:id="@+id/item_add"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="＋">

            </Button>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
