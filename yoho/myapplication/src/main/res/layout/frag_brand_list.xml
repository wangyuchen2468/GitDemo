<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

       <androidx.coordinatorlayout.widget.CoordinatorLayout

           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <com.google.android.material.appbar.AppBarLayout
               android:id="@+id/brand_appbar"
               android:background="@color/white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.google.android.material.appbar.CollapsingToolbarLayout
                   app:layout_scrollFlags="scroll|exitUntilCollapsed"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:layout_marginVertical="5dp"
                           android:background="@drawable/search_bg_con"
                           android:id="@+id/brand_list_search"
                           android:layout_marginHorizontal="10dp"
                           android:padding="10dp"
                           android:hint="   搜索品牌"
                           android:drawableLeft="@mipmap/search_icon"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"></TextView>
                       <com.youth.banner.Banner
                           android:layout_below="@id/brand_list_search"
                           android:id="@+id/brand_list_banner"
                           android:layout_width="match_parent"
                           android:layout_height="160dp"/>
                       <LinearLayout
                           android:id="@+id/child_brand_linear"
                           android:layout_below="@id/brand_list_banner"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <View
                               android:background="#F0F0F0"
                               android:layout_width="match_parent"
                               android:layout_height="5dp"/>
                           <androidx.recyclerview.widget.RecyclerView
                               android:id="@+id/brand_list_hor_rec"
                               android:layout_width="match_parent"
                               android:layout_height="100dp"/>
                           <View
                               android:background="#F0F0F0"
                               android:layout_width="match_parent"
                               android:layout_height="5dp"/>
                       </LinearLayout>
                       <com.google.android.material.tabs.TabLayout
                           android:layout_below="@id/child_brand_linear"
                           android:id="@+id/brand_list_tab"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                       </com.google.android.material.tabs.TabLayout>
                       <View
                           android:id="@+id/aaa123"
                           android:layout_below="@id/brand_list_tab"
                           android:background="#F0F0F0"
                           android:layout_width="match_parent"
                           android:layout_height="2dp"/>

                   </RelativeLayout>
               </com.google.android.material.appbar.CollapsingToolbarLayout>
           </com.google.android.material.appbar.AppBarLayout>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_marginBottom="40dp"
               android:id="@+id/brand_list_sec_rec"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
       </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.example.myapplication.view.MyScorllRight
        android:id="@+id/brand_list_scrollRight"
        android:layout_width="16dp"
        android:layout_height="610dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>